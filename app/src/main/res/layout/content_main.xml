<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".MainActivity">

    <TextView
            android:text="Example of Gauge"
            android:layout_width="150dp"
            android:layout_height="58dp"
            android:id="@+id/textView4" android:textAlignment="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageButton" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView3" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageButton
            android:layout_width="150dp"
            android:layout_height="204dp" app:srcCompat="?attr/actionModeBackground"
            android:id="@+id/imageButton2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp" android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/imageButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Home Screen Showing Running App"
            android:layout_width="168dp"
            android:layout_height="69dp"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp" android:layout_marginTop="300dp" app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"/>
    <ImageButton
            android:layout_width="150dp"
            android:layout_height="204dp" app:srcCompat="?attr/actionModeBackground"
            android:id="@+id/imageButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintEnd_toStartOf="@+id/imageButton2" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Example of Gauge"
            android:layout_width="150dp"
            android:layout_height="58dp"
            android:id="@+id/textView3" android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageButton2"/>
    <Button
            android:text="Connect to Adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonConnectAdapter"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <Button
            android:text="Fetch Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonFetchData"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonConnectAdapter"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonUploadData" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Upload Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonUploadData"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonConnectAdapter" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="View Logs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLogs"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonUploadData" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/buttonDetail"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="View Detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDetail"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonFetchData" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>